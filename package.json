{
  "name": "badge-box",
  "version": "0.2.0",
  "description": "Tool for managing badges.",
  "repository": "https://github.com/zhangxin840/badge-box.git",
  "main": "server.js",
  "keywords": [
    "badge",
    "BadgeBox",
    "gamification",
    "LeanCloud",
    "LeanEngine"
  ],
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.12.3",
    "cookie-parser": "^1.3.5",
    "ejs": "2.3.1",
    "express": "4.12.3",
    "leanengine": "^0.4.0"
  },
  "engines": {
    "node": "4.x"
  },
  "devDependencies": {
    "antd": "^0.12.13",
    "autoprefixer": "^6.3.4",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "browser-sync": "^2.11.2",
    "browser-sync-webpack-plugin": "^1.0.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "font-spider": "^0.3.8",
    "fontmin": "^0.9.2",
    "normalize.css": "^4.0.0",
    "postcss": "^5.0.19",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.2",
    "postcss-sassy-mixins": "^2.0.0",
    "postcss-scss": "^0.1.7",
    "precss": "^1.4.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "watchy": "^0.6.6",
    "webpack": "^1.12.14"
  },
  "scripts": {
    "clean": "find build | grep 'build/' | grep -v 'build/node_modules' | grep -v 'build/.avoscloud' | xargs rm -rf",
    "copy:server": "mkdir -p build && cp -R src/server/. package.json build",
    "copy:browser": "mkdir -p build/public/assets/images && cp -R src/browser/common/images/. build/public/assets/images",
    "build:server": "npm run copy:server",
    "build:font": "bash tools/buildFont.sh",
    "build:pack": "webpack --config tools/webpack.config.js",
    "build:pack:release": "webpack --config tools/webpack.config.js --optimize-minimize",
    "build:browser": "npm run copy:browser && npm run build:font && npm run build:pack",
    "build": "npm run clean && npm run build:server && npm run build:browser",
    "lint": "eslint src routes",
    "lint:fix": "eslint src routes --fix",
    "up": "npm run build && cd build && npm install --production && lean up",
    "watch:browser": "webpack --config tools/webpack.config.js --watch",
    "watch:server": "watchy -w src/server -- npm run build:server",
    "deploy": "npm run build && cd build && lean deploy",
    "publish": "npm run build && cd build && lean publish"
  }
}
